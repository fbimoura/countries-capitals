{
  "name": "countries-capitals",
  "version": "0.0.0-development",
  "description": "A simple package to get the capital of the countries",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "standard **/*.ts | snazzy",
    "lint:fix": "standard **/*.ts --fix",
    "semantic-release": "semantic-release",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chgasparoto/countries-capitals.git"
  },
  "keywords": [
    "countries",
    "capitals"
  ],
  "author": "Cleber Gasparoto <chgasparoto@gmail.com> (https://github.com/chgasparoto)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chgasparoto/countries-capitals/issues"
  },
  "homepage": "https://github.com/chgasparoto/countries-capitals#readme",
  "dependencies": {
    "random-item": "3.0.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "@typescript-eslint/eslint-plugin": "2.2.0",
    "@typescript-eslint/parser": "2.2.0",
    "codecov": "3.5.0",
    "cz-conventional-changelog": "3.0.2",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "jest-extended": "0.11.2",
    "semantic-release": "^15.13.24",
    "snazzy": "8.0.0",
    "standard": "14.2.0",
    "ts-jest": "24.1.0",
    "tslint": "5.20.0",
    "typescript": "3.6.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "collectCoverageFrom": [
      "index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
